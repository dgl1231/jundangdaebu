                <script>
                    function vis(n) {
                        document.getElementById("content1st").style.display = "none";
                        document.getElementById("content2nd").style.display = "none";
                        if (n == 1) {
                            document.getElementById("content1st").style.display = "block";

                            document.getElementById("btn1st").style.color = "rgb(88, 109, 204)";
                            document.getElementById("btn2nd").style.color = "rgb(94, 169, 219)";

                            document.getElementById("btn1st").style.fontSize = "30px";
                            document.getElementById("btn2nd").style.fontSize = "20px";
                        } else if (n == 2) {
                            document.getElementById("content2nd").style.display = "block";

                            document.getElementById("btn1st").style.color = "rgb(94, 169, 219)";
                            document.getElementById("btn2nd").style.color = "rgb(88, 109, 204)";

                            document.getElementById("btn1st").style.fontSize = "20px";
                            document.getElementById("btn2nd").style.fontSize = "30px";

                        } 
                    }
                </script>
