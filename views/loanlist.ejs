<div class="body__container">
    <div class="main-container">
        <div class="title_back">
            <div class="title">대출 이력</div>
        </div>

        <div class="board">
            <div class="leftpadding"></div>
            <div class="mainboard">

                <div class="side_section">
                    <!--
                    <div class="left_arrow_ico_section">
                        <div class="left_arrow_ico">
                            <label>-1</label>
                        </div>
                    </div>
                    -->
                </div>

                <style>
                    .slide_container .board_container {
                        width: calc(100% * <%=Math.ceil(length / 4)%>);
                    }
                    
                    .board_container .center_container {
                        width: calc(100% / <%=Math.ceil(length / 4)%>);
                        height: 350px;
                    }
                </style>

                <%for (let o = 1; o < (length / 4) + 1; o++) {%>
                    <style>
                        .slide_container li.center_container:nth-child(<%=o%>) {
                            background: #f5f6f7;
                        }
                    </style>
                    <%}%>
                        <div class="slide_container">
                            <ul id="board" class="board_container">
                                <%let j = 0;%>
                                    <%for (let i = 1; i < (length / 4) + 1; i++) {%>
                                        <%if (i == 1) {%>
                                            <li class="center_container active">
                                                <%} else {%>
                                                    <li class="center_container">
                                                        <%}
                    for (; j < i * 4; j++) {
                    if (j == length) {
                    break;
                    }%>
                                                            <div class="info_container">
                                                                <div class="info_box">
                                                                    <div class="info_top_section">
                                                                        <div class="text_section">
                                                                            <div class="productText">
                                                                                <%=loanInfos[j].G_NAME%>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="info_middle_section">
                                                                        <div class="photo_section">
                                                                            <%var filepath = loanInfos[j].DOCU_PATH +'/'+loanInfos[j].STORED_DOCU_NAME%>
                                                                                <div class="photoZone">
                                                                                    <img class="photo" alt="FUCK" src="<%=filepath%>">
                                                                                </div>
                                                                        </div>
                                                                        <div class="text_section">
                                                                            <div class="textZone">
                                                                                <div class="loanAmountText">
                                                                                    <%=loanInfos[j].LOAN_PRINCIPAL%>원 대출
                                                                                </div>
                                                                            </div>
                                                                            <div class="textZone">
                                                                                <div class="userNameText">
                                                                                    <%=loanInfos[j].NAME.substr(0, 1)%>OO 고객님
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <!--
                                                                    <div class="info_bottom_section">
                                                                        <div class="photo_info_btn_section">
                                                                            <span class="photo_info_btn_text">
                                        사진 보기
                                    </span>
                                                                        </div>
                                                                        </div>
                                                                        -->
                                                                </div>
                                                            </div>
                                                            <%}%>
                                                    </li>
                                                    <%}%>
                            </ul>
                            <div class="selectCircles_container">
                                <div class="selectCircles_box">
                                    <div class="selectCircles">
                                        <%for (let k = 1; k < (length / 4) + 1; k++) {%>
                                            <%if (k == 1) {%>
                                                <input type="radio" name="pos" id="pos<%=k%>" class="rdg" value="<%=k%>" onclick="getRadio(event)" checked>
                                                <%} else {%>
                                                    <input type="radio" name="pos" id="pos<%=k%>" class="rdg" value="<%=k%>" onclick="getRadio(event)">
                                                    <%}%>
                                                        <label for="pos<%=k%>">
                                <%=k%>
                                </label>
                                                        <%}%>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="side_section">
                            <!--
                            <div class="right_arrow_ico_section">
                                <div class="right_arrow_ico" onclick="getNext(event)">
                                    <label>1</label>
                                </div>
                            </div>
                        -->
                        </div>
            </div>
            <div class="rightpadding">
            </div>
        </div>
    </div>
    <script>
        function getRadio(event) {
            var hi = Number(event.target.value);
            var hello = (hi - 1) * (-1000);

            document.getElementById('board').style.margin = '0 0 0' + hello + 'px';
        }
    </script>
</div>